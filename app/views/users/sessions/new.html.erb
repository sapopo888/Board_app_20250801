<div class='flex flex-col items-center justify-center min-h-screen bg-gray-100'>
  <div class='bg-white shadow-lg rounded-lg px-10 py-12 w-full max-w-md'>
    <h1 class='text-4xl font-bold text-center text-blue-900 mb-8'>Log in</h1>
  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-6">
        <%= f.label :email, class: 'block text-blue-900 font-semibold mb-2' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-800 focus:outline-none' %>
      </div>
  
      <div class="mb-6">
        <%= f.label :password, class: 'block text-blue-900 font-semibold mb-2' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-800 focus:outline-none' %>
      </div>
    
      <div class="text-center">
        <%= f.submit "Log in", class: 'w-full bg-blue-900 hover:bg-blue-800 text-white font-semibold py-3 rounded-lg transition duration-300' %>
      </div>
    <% end %>
    </div>
</div>
