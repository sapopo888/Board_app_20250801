<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">
  <div class="bg-white shadow-lg rounded-lg px-10 py-12 w-full max-w-md">
    <h1 class="text-3xl font-bold text-center text-blue-900 mb-8"><%= t('devise.registrations.new.title') %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :name, class: "block text-blue-900 font-semibold mb-2" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-800 focus:outline-none" %>
      </div>

      <div class="mb-6">
        <%= f.label :email, class: "block text-blue-900 font-semibold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-800 focus:outline-none" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-blue-900 font-semibold mb-2" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-gray-500 mb-1"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></p>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-800 focus:outline-none" %>
      </div>

      <div class="mb-8">
        <%= f.label :password_confirmation, class: "block text-blue-900 font-semibold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-800 focus:outline-none" %>
      </div>

      <div class="text-center">
        <%= f.submit t('devise.registrations.new.sign_up'), class: "w-full bg-blue-900 hover:bg-blue-800 text-white font-semibold py-3 rounded-lg transition duration-300" %>
      </div>
    <% end %>
  </div>
</div>
