<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">
  <h1 class="text-3xl font-bold text-blue-900 mb-8">
    <%= Date.today.strftime('%m月%d日') %> みんなの投稿一覧
  </h1>

  <div id="book" class="w-full max-w-4xl">
    <% if @posts.present? %>
      <% @posts.each do |post| %>
        <div class="post bg-white rounded-lg shadow-md p-6 mb-6">
          <time class="block text-sm text-gray-500 mb-2">
            <%= post.created_at.strftime('%Y年%m月%d日 %H:%M') %>
          </time>
          <h2 class="text-xl font-semibold text-blue-900 mb-3">
            <%= post.title %>
          </h2>
          <div class="text-gray-800 leading-relaxed">
            <%= simple_format(h(post.body)) %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-600 text-center">投稿はありません</p>
    <% end %>
  </div>
</div>
