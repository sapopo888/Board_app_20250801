<div class="flex flex-col items-center justify-center min-h-screen border-gray-100">
  <div class='bg-white shadow-lg px-10 py-12 mt-8 w-full max-w-md'>
    <h1 class='text-3xl font-bold text-center'>詳細</h1>
    <div class="">
      <div><%= l @post.created_at, format: :default %></div>
      <div><%= @post.title %></div>
      <div><%= @post.body %></div>
    </div>
    <div class="flex">
      <div class='ms-auto space-x-2.5'>
        <%= link_to '編集', edit_post_path(@post), class: 'border rounded px-2 py-1 bg-yellow-500 text-white hover:bg-yellow-600' %>
        <%= link_to '削除', '#', class: 'border rounded px-2 py-1 bg-red-600 text-white hover:bg-red-700' %>
      </div>
    </div>
  </div>
</div>