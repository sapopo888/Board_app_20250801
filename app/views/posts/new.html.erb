<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">
  <div class="bg-white shadow-lg rounded-lg px-10 py-12 w-full max-w-md">
    <h1 class="text-3xl font-bold text-center text-blue-900 mb-8"><%= t('post.new.title') %></h1>

    <%= form_with model: @post, class: "new_post" do |f| %>
      <div class="mb-6">
        <%= f.label :title, class: "block text-blue-900 font-semibold mb-2" %>
        <%= f.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-800" %>
      </div>

      <div class="mb-8">
        <%= f.label :body, class: "block text-blue-900 font-semibold mb-2" %>
        <%= f.text_area :body, rows: 6, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-800" %>
      </div>

      <div class="text-center">
        <%= f.submit t('helpers.submit.create'), class: "w-full bg-blue-900 hover:bg-blue-800 text-white font-semibold py-3 rounded-lg transition duration-300" %>
      </div>
    <% end %>
  </div>
</div>
